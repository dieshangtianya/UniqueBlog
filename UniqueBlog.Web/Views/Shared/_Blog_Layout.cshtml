<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/browser-override.css" rel="stylesheet" />
    <link href="~/vendor/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/home.css" rel="stylesheet" />
    <link href="~/vendor/jquery-ui/1.12.1/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/css/basic.css" rel="stylesheet" />
    <link href="~/css/blog-layout.css" rel="stylesheet" />
</head>
<body>
    <div class="container blog-container">
        <div class="blog-title">
            <p class="title-text">@ViewBag.CommonBlogData.BlogData.BlogTitle</p>
            <span class="description-text">────&nbsp;@ViewBag.CommonBlogData.BlogData.Description</span>
        </div>
        <div class="navigation">
            <ul class="horizontal-list clearfix">
                <li class="menuItem">首页</li>
                <li class="menuItem">随笔</li>
                <li class="menuItem">联系</li>
                <li class="menuItem">订阅</li>
            </ul>
        </div>
        <div class="blog-body">
            @RenderBody()
        </div>
        <div class="footer">
           <p> @@Copyright Freddy </p>
        </div>
    </div>
</body>
</html>
