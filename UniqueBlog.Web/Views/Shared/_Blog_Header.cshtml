@model UniqueBlog.Controllers.Models.ViewModels.PageViewModelBase
<div class="blog-title-container">
    <div class="container">
        <div class="row">
            <div class="col-md-10 blog-title">
                <p class="title-text">@Model.GlobalBlogData.BlogInformation.BlogTitle</p>
                <span class="description-text">────&nbsp;@Model.GlobalBlogData.BlogInformation.Description</span>
            </div>
            <div class="col-md-2">
                @if (Model.HasUserLogin)
                {
                    <div class="blog-management">
                        <a class="profile-icon"><i class="fa fa-user-circle-o" aria-hidden="true"></i></a>
                        <div class="blog-management-panel">
                            @Html.ActionLink("Profile信息", "Logout")
                            @Html.ActionLink("管理面板", "")
                            @Html.ActionLink("安全退出", "Logout")
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="navigation">
    <div class="container">
        <div class="row">
            <ul class="horizontal-list clearfix">
                <li>@Html.ActionLink("首页", "Index", "Home")</li>
                <li>@Html.ActionLink("新随笔", "NewPost", "BlogPost")</li>
                <li>@Html.ActionLink("工具", "")</li>
                <li>@Html.ActionLink("资源", "")</li>
                <li>@Html.ActionLink("订阅", "")</li>
            </ul>
        </div>
    </div>
</div>

