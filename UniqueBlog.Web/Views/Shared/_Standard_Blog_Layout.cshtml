@{ 
    Layout = "_Base_Blog_Layout.cshtml";
}
<!--css-->
<link href="~/css/blog-standard-layout.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-3">
        <div class="row">
            <div class="widget-container widget-calendar" id="widget-calendar"></div>
        </div>
        <div class="row">
            <div class="widget-container widget-post-category widget-container-border">
                <div class="widget-post-category-title">博客分类</div>
                @foreach (var category in Model.GlobalBlogData.CategoryList)
                {
                    <div><a>@category.CategoryName</a></div>
                }
            </div>

        </div>
        <div class="row">
            <div class="widget-container">
               
            </div>
        </div>
    </div>
    <div class="col-md-9">
       @RenderBody()
    </div>
</div>

@RenderSection("scripts",false)
