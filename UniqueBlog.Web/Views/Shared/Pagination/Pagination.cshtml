@model UniqueBlog.Controllers.Models.Pagination

@if (Model.EndPage > 1)
{
    <div>
        <ul class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <li>
                    <a href="@Model.GetRequestUrl(1)">首页</a>
                </li>
                <li>
                    <a href="@Model.GetRequestUrl(Model.CurrentPage-1)">上一页</a>
                </li>
            }
            @for (var page = Model.StartPage; page <= Model.EndPage; page++)
            {
                <li class="@(page == Model.CurrentPage ? "active" : "")">
                    <a href="@Model.GetRequestUrl(page)">@page.ToString()</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li>

                    <a href="@Model.GetRequestUrl(Model.CurrentPage+1)">下一页</a>
                </li>
                <li>
                    <a href="@Model.GetRequestUrl(Model.TotalPages)">最后一页</a>
                </li>
            }
        </ul>
    </div>
}