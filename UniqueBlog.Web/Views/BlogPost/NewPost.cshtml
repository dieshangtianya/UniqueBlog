<link href="~/css/post-new.css" rel="stylesheet" />
<!--script-->
<script src="@Url.Content("~/vendor/require/2.1.15/require.min.js")" data-main="/app/post/new-post-main"></script>

@using UniqueBlog.DTO;

<div id="post-editor" class="post-edit-container">
	<div class="form-group">
		<label for="博文标题" class="control-label">博文标题:</label>
		<div>
			<input type="text" placeholder="请输入标题" class="form-control" />
		</div>
	</div>
	<div class="form-group post-editor-container">
		<textarea id="post-textarea" cols="20" rows="2" class="ckeditor"></textarea>
	</div>
	<div>
		<label for="选择所属分类">选择所属分类：</label>
		<div>
			
			@foreach(CategoryDto item in ViewBag.CategoryList)
			{
				@Html.CheckBox("category_" + item.CategoryId, false, new { @class = "category-item" });
				@item.CategoryName;
			}
		</div>
	</div>
</div>