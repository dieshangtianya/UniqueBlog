@{
    Layout = "~/Views/Shared/_Base_Blog_Layout.cshtml";
}
@using UniqueBlog.Web.Extensions
@model UniqueBlog.Controllers.Models.ViewModels.PostViewModel

<link href="~/vendor/ckeditor/4.6.0/plugins/codesnippet/lib/highlight/styles/vs.css" rel="stylesheet"/>
<link href="~/css/post.css" rel="stylesheet" />
<link href="~/css/predefined-post-extra-style.css" rel="stylesheet" />

@section scripts
{
    @Html.RenderRequireJS("/app/post/post")
}
<div class="post-container">
    <div class="row">
        <div class="col-md-12">
            <div>
                <div class="post-title">
                    <a href="@Request.Url.PathAndQuery">@Model.PostTitle</a>
                </div>
                <div class="post-content">
                    @(new HtmlString(Model.PostContent))
                </div>
            </div>
            <div class="content-block post-comment">
                <div class="post-comment-title">评论：</div>
                <div></div>
            </div>

            <div class="content-block publish-comment">
                <div class="post-comment-title">发表评论：</div>
                <div class="form-group">
                    <input type="text" class="form-control" id="txtNickName" placeholder="昵称">
                </div>
                <div class="form-group">
                    <textarea id="commentEditor" name="commentEditor" class="ckeditor"></textarea>
                </div>
            </div>
        </div>
    </div>
</div>