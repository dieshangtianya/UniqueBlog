<link href="~/css/post.css" rel="stylesheet" />

@section scripts
{
    @Html.RenderRequireJS("/app/post/post")
}



<div class="row">
    <div class="col-md-12">
        <div class="post-title"><a href="@Request.Url.PathAndQuery">@Model.PostTitle</a></div>
